{
  "name": "courtyard-vr",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.15",
    "@fortawesome/free-solid-svg-icons": "^5.7.2",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-helmet": "^5.2.0",
    "react-image-fade-in": "^1.0.2",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.5",
    "styled-components": "^4.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:courtyard": "REACT_APP_THEME=courtyard yarn start",
    "start:fairfield": "REACT_APP_THEME=fairfield yarn start",
    "start:springhill": "REACT_APP_THEME=springhill yarn start",
    "build": "react-scripts build",
    "build:courtyard": "cp public/courtyard.now.json public/now.json && REACT_APP_THEME=courtyard yarn build",
    "build:fairfield": "cp public/fairfield.now.json public/now.json && REACT_APP_THEME=fairfield yarn build",
    "build:springhill": "cp public/springhill.now.json public/now.json && REACT_APP_THEME=springhill yarn build",
    "deploy": "yarn build && now ./build",
    "deploy:courtyard": "yarn build:courtyard && now ./build",
    "deploy:fairfield": "yarn build:fairfield && now ./build",
    "deploy:springhill": "yarn build:springhill && now ./build",
    "alias": "cd ./build && now alias",
    "all": "yarn deploy:courtyard && yarn alias && yarn deploy:fairfield && yarn alias && yarn deploy:springhill && yarn alias"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
